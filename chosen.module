/**
 * @file
 * Integrates the <a href="http://harvesthq.github.com/chosen/">Chosen</a> plugin to Drupal
 */

define('CHOSEN_MODULE_PATH', drupal_get_path('module', 'chosen'));

/**
 * Implements hook_init().
 */
function chosen_init() {
  $path = libraries_get_path('chosen');
  drupal_add_js($path . '/chosen.jquery.min.js');
  drupal_add_css($path . '/chosen.css');
  drupal_add_js(CHOSEN_MODULE_PATH . '/chosen.js');
}

/**
 * Implementation of hook_menu()
 */
function chosen_menu() {
  $items = array();
  
  $items['admin/config/content/chosen'] = array(
    'title' => 'Chosen',
    'description' => 'Configuration for Chosen plugin',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('chosen_admin_settings'),
    'access arguments' => array('Administer Chosen'),
  );
  
  return $items;
}